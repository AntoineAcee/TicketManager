<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ route_name }}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">{{ route_name }}</h5>
            <nav class="my-2 my-md-0 mr-md-3">
            {% if app.token.user != "anon." %}
                <a class="p-2 text-dark" href="{{ '/' }}">Home</a>
                <a class="p-2 text-dark" href="{{ '/ticket/new' }}">New Ticket</a>
                <a class="p-2 text-dark" href="{{ '/logout' }}">Logout</a>
            {% else %}
                <a class="p-2 text-dark" href="{{ '/login' }}">Login</a>
                <a class="p-2 text-dark" href="{{ '/register' }}">Register</a>
            {% endif %}
            </nav>
        </div>

        <div class="main">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
